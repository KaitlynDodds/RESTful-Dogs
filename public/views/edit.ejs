<% include partials/header %>                     

<form action="/dogs/<%= dog._id %>" method="PUT" class="ui form">
    <div class="field">
        <label>Dog Name</label>
        <input type="text" name="name" value="<%= dog.name %>">
    </div>

    <div class="two fields">
        <div class="field">
            <label>Breed</label>
            <input type="text" name="breed" value="<%= dog.breed %>">
        </div>

        <div class="field">
            <label>Image Link</label>
            <input type="text" name="image" value="<%= dog.image %>>">
        </div>
    </div>
   
    <div class="two fields">
        <div class="field">
            <label>Age</label>
            <input type="number" name="age" value="<%= dog.age %>">
        </div>

        <div class="field">
            <label>Status</label>
            <div class="ui selection dropdown">
                <input type="hidden" name="status">
                <i class="dropdown icon"></i>
                <div class="default text">Dog Status</div>
                <div class="menu">
                    <div class="item" data-value="available">Available</div>
                    <div class="item" data-value="adoption-pending">Adoption Pending</div>
                    <div class="item" data-value="unavailable">Unavailable</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="field">
        <label>Description</label>
        <textarea name="description"><%= dog.description %></textarea>
    </div>
    <button class="ui button" type="submit">Submit</button>
    <div class="ui error message"></div>
</form>

<% include partials/footer %>